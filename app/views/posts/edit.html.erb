<h1>Edit a New Post</h1>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content %>
<%= f.text_field :content %>
<br>
<br>
<% f.label "Bloggers" %>
<%=f.collection_select('blogger_id',@bloggers,'id','name') %>
<br>
<br>
<% f.label "Destinations" %>
<%=f.collection_select('destination_id',@destinations,'id','name') %>
<br>
<br>
<%= f.submit %>
<% end %>

<% @post.errors.to_a.each do |error| %>
  <p><%= error %></p>
<% end %>
