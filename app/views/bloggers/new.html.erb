<h2>Create a Blogger</h2>

<ul>
<% @blogger.errors.full_messages.each do |message| %>
    <li><%= message %></li>
<% end %>
</ul>

<%= form_for @blogger do |f| %>

    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %><br>

    <%= f.label :age, "Age: " %>
    <%= f.number_field :age %><br>

    <%= f.label :bio, "Bio: " %>
    <%= f.text_area :bio %><br><br>

    <%= f.submit %>

<% end %>
